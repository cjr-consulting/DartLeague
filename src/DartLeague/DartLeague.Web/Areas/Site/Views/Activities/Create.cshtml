@{
    ViewData["Title"] = "Add Activity";
}
@Html.ValidationSummary()
<div class="container">
    <h2>Create Activity </h2>
    <form asp-controller="Activities" enctype="multipart/form-data" asp-action="Create" method="post">
        @await Html.PartialAsync("_activitiesFields")
        <div>
            <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o fa-lg"></i> Add</button>
            <a class="btn btn-danger" asp-controller="Activities" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
<style>
    validation-summary-errors {
        color: crimson;
    }
</style>
