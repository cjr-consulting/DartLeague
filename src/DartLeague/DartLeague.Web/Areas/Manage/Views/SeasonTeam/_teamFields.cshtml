@using DartLeague.Web.Areas.Manage.Models
@model SeasonTeamEditViewModel

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control input-lg"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Abbreviation"></label>
            <input type="text" asp-for="Abbreviation" class="form-control"/>
            <span asp-validation-for="Abbreviation" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label for="logoFile">Logo Picture <small>jpg/png</small></label>
        <input type="file" id="logoFile" name="logoFile" class="form-control" />
        @if(!string.IsNullOrEmpty(Model.LogoFileUrl))
        {
            <a href="@Model.LogoFileUrl">Current File</a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label for="teamFile">Team Picture <small>jpg/png</small></label>
        <input type="file" id="teamFile" name="teamFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.TeamFileUrl))
        {
            <a href="@Model.LogoFileUrl">Current File</a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label asp-for="CaptainMemberId"></label>
        <select class="form-control" asp-for="CaptainMemberId" asp-items="Model.Members">
            <option>Please select member</option>
        </select>
        <span asp-validation-for="CaptainMemberId" class="text-danger"></span>
    </div>
</div>