@using DartLeague.Web.Areas.Manage.Models
@model SeasonManagementRootViewModel<SeasonLinkViewModel>
@{
    ViewData["Title"] = "Edit Season Link";
}
<div class="container">
    <h2>Edit League Link</h2>
    <form enctype="multipart/form-data" asp-controller="SeasonLink" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.Partial("_seasonLinkFields", Model.Data)
        <div>
            <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o fa-lg"></i> Save</button>
            <a class="btn btn-danger" asp-controller="SeasonLink" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section scripts{
    <script>
        (function(d) {
            d.getElementsByName('Title')[0].focus();
            $('input[name="LinkType"]').on('click change', function (e) {
                if ($('input[name="LinkType"]')[0].checked) {
                    $('#fileUploadPanel').hide();
                    $('#urlPanel').show();
                }
                if ($('input[name="LinkType"]')[1].checked) {
                    $('#fileUploadPanel').show();
                    $('#urlPanel').hide();
                }
            });
            $('#fileUploadPanel').hide();
            $('#urlPanel').hide();
            if ($('input[name="LinkType"]')[0].checked) {
                $('#fileUploadPanel').hide();
                $('#urlPanel').show();
            }
            if ($('input[name="LinkType"]')[1].checked) {
                $('#fileUploadPanel').show();
                $('#urlPanel').hide();
            }
        })(document);
    </script>
}