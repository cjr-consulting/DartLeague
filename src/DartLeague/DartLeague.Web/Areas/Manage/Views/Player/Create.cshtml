
@{
    ViewData["Title"] = "Create Player";

}

<h2>Add Player</h2>
<form asp-controller="Player" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.Partial("_playerFields")
    <div>
        <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o fa-lg"></i> Add</button>
        <a class="btn btn-danger" asp-controller="Player" asp-action="Index">Cancel</a>
    </div>
</form>

@section scripts{
        <script>
            (function(d) {
                d.getElementsByName('firstName')[0].focus();
            })(document);
        </script>
    }


