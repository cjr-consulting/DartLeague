@{
    ViewData["Title"] = "Edit Sponsor";
}
<div class="container">
    <h2>Edit Sponsor</h2>
    <form asp-controller="Sponsor" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @await Html.PartialAsync("_sponsorFields")
        <div>
            <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o fa-lg"></i> Save</button>
            <a class="btn btn-danger" asp-area="Manage" asp-controller="Sponsor" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
@section scripts{
    <script>
        (function(d){
            d.getElementsByName('name')[0].focus();
        })(document);
    </script>
}
