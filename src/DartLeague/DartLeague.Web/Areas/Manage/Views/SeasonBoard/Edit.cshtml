@using DartLeague.Web.Areas.Manage.Models;
@model SeasonManagementRootViewModel<BoardMemberEditViewModel>
@{
    ViewData["Title"] = "Edit Board Member";
}

<div class="container">
    <ol class="breadcrumb">
        <li><a asp-area="Manage" asp-controller="Home" asp-action="Index">Manage League</a></li>
        <li class="active">Edit Board Member</li>
    </ol>
    <h2>Edit Board Member</h2>
    <form asp-controller="SeasonBoard" asp-action="Edit" asp-route-id="@Model.Data.Id" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.Partial("_seasonBoardFields", Model.Data)
        <div>
            <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o fa-lg"></i> Save</button>
            <a class="btn btn-danger" asp-controller="SeasonBoard" asp-action="Index" asp-area="Manage">Cancel</a>
        </div>
    </form>
</div>

